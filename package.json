{
  "name": "api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon src/app.ts",
    "test": "jest",
    "build": "rm -rf dist; esbuild src/app.ts --bundle --platform=node --outdir=dist"
  },
  "standard": {
    "env": {
      "jest": true
    }
  },
  "jest": {
    "verbose": true,
    "transform": {
      "\\.[jt]sx?$": "esbuild-jest"
    },
    "setupFiles": [
      "dotenv/config"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/app.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "node -r esbuild-register"
    }
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.10",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^26.0.21",
    "@types/polka": "^0.5.2",
    "esbuild": "^0.9.3",
    "esbuild-jest": "^0.5.0",
    "esbuild-register": "^2.3.0",
    "esm": "^3.2.25",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "apollo-server-express": "^2.21.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "graphql": "^15.5.0",
    "polka": "^0.5.2"
  }
}